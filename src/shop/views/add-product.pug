extends ../../layout/main.pug

block content
    main
      form.col-md-5.p-lg-5.mx-auto.my-5(method="post" action="/products/add-product")
        .mb-3
          label.form-label(for="title") Product name
          input.form-control(type="text" placeholder="Product name" name="title")
        .mb-3
          label.form-label(for="price") Price
          input.form-control(type="number" min=".01" step="any" placeholder="Price" name="price")
        .mb-3
          label.form-label(for="description") Description
          textarea.form-control(name="description", cols="30", rows="8" placeholder="Description")
        .mb-3
          label.form-label(for="image") Image
          input.form-control(type="url" placeholder="image" name="image")
        button.btn.btn-primary.start-50(type="submit") Create Product
